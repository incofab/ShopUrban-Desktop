<UserControl x:Class="ShopUrban.View.UserControls.Settings.VATSettingUserCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopUrban.View.UserControls.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400"
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="VAT (in %)" Margin="0 0 20 0" />
        <TextBox Grid.Column="1" Text="0" Name="tbVAT" LostFocus="tbVAT_LostFocus" Padding="0" />
    </Grid>
</UserControl>
