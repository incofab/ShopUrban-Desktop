<UserControl x:Class="ShopUrban.View.UserControls.Settings.ReceiptBottomNote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopUrban.View.UserControls.Settings"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800"
             >
    <Grid>
        <StackPanel Orientation="Horizontal" >
            <TextBox Text="" Name="tbNote" 
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    materialDesign:HintAssist.Hint="Receipt Bottom Note " materialDesign:HintAssist.IsFloating="True"
                    materialDesign:HintAssist.HelperText="This note will appear at the bottom of your receipts"
                     MinWidth="400" MaxLines="2" VerticalAlignment="Center"
                    />
            <Button x:Name="btnSave" Style="{StaticResource MaterialDesignRaisedDarkButton}" Width="100" 
                    VerticalAlignment="Center" Margin="10 0 0 0" VerticalContentAlignment="Center" 
                    Click="btnSave_Click">Save</Button>
        </StackPanel>
    </Grid>
</UserControl>
