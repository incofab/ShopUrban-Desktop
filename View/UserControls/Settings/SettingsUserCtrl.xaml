<UserControl x:Class="ShopUrban.View.UserControls.Settings.SettingsUserCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopUrban.View.UserControls.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="500"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="#ededfb" BorderThickness="0 0 0 1" BorderBrush="Gray" >
            <TextBlock Text="Settings" Margin="10 10 0 10" FontSize="15" />
        </Border>
        <StackPanel Grid.Row="1" Margin="10 10 0 0" Orientation="Vertical" >
            <local:PaperLayoutSettingsCtrl />
            <Separator Foreground="#000" Margin="0 15 0 15" Height="1" />
            <local:VATSettingUserCtrl />
            <Separator Foreground="#FEFEFE" Margin="0 15 0 15" />
        </StackPanel>
    </Grid>
</UserControl>
