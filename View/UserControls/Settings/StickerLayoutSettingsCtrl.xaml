<UserControl x:Class="ShopUrban.View.UserControls.Settings.StickerLayoutSettingsCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopUrban.View.UserControls.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Sticker Print Layout" VerticalAlignment="Center" Margin="0 5 0 10" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <RadioButton x:Name="rdLandScape" GroupName="stickerPrintLayout" Content="Landscape" Margin="10 0"
                             Click="rdLandScape_Click"/>
                <RadioButton x:Name="rdPortrait" GroupName="stickerPrintLayout" Content="Portrait" Margin="10 0"
                             Click="rdPortrait_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
