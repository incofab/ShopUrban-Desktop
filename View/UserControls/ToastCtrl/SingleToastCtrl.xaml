<UserControl x:Class="ShopUrban.View.UserControls.ToastCtrl.SingleToastCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShopUrban.View.UserControls.ToastCtrl"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800"
             Height="Auto" MaxWidth="300"
             >
    <Border x:Name="container" Padding="10" Background="Green" CornerRadius="2" Margin="0 5 5 0" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <materialDesign:PackIcon Name="icon" Kind="CheckCircleOutline" Grid.Column="0" VerticalAlignment="Center" Foreground="White" />
            <TextBlock x:Name="tbMessage" Text="" TextWrapping="Wrap" Grid.Column="1" Foreground="White" 
                       VerticalAlignment="Center" Margin="10 0 0 0"/>
        </Grid>
    </Border>
</UserControl>
